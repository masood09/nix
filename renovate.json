{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/).+\\.nix$/"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[^\\s]+)(?: depName=(?<depName>[^\\s]+))?(?: packageName=(?<packageName>[^\\s]+))?(?: versioning=(?<versioning>[^\\s]+))?\\s*\\n\\s*image\\s*=\\s*\"(?:(?<packageName2>[^\"]+?)):(?<currentValue>[^\"]+)\";"
      ]
    }
  ]
}
